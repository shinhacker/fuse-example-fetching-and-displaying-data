<App Theme="Basic" ClearColor="#eeeeeeff">
	<DockPanel>
		<JavaScript>
			var Observable = require("FuseJS/Observable");

			var pictures = Observable();
			var errorMessage = Observable();

			fetch("http://jsonplaceholder.typicode.com/photos")
				.then(function(result) {
					if (result.status !== 200) {
						// Bad response
						debug_log("Something went wrong, status code: " + result.status);
						errorMessage.value = "Oh noes! :(";
						return;
					}

					//throw "Some error";

					result.json().then(function(data) {
						// Success! :)
						debug_log("Success!");
						//debug_log(JSON.stringify(data));

						for (var i = 0; i < 10; i++) {
							var item = data[i];
							debug_log(JSON.stringify(item));
							pictures.add(item);
						}
					});
				}).catch(function(error) {
					// Fatal JS error
					debug_log("Fetch error " + error);
					errorMessage.value = "Oh noes! :(";
				});

			module.exports = {
				pictures: pictures,
				errorMessage: errorMessage,
			};
		</JavaScript>

		<StatusBarBackground DockPanel.Dock="Top" />

		<Text TextColor="#a94442" Value="{errorMessage}" Alignment="Center" />

		<ScrollView ClipToBounds="true">
			<StackPanel>
				<Each Items="{pictures}">
					<DockPanel Margin="0,0,0,10">
						<Image Url="{thumbnailUrl}" Dock="Left" />
						<Text Value="{title}" TextWrapping="Wrap" Alignment="CenterLeft" Margin="10" />
					</DockPanel>
				</Each>
			</StackPanel>
		</ScrollView>
	</DockPanel>
</App>

